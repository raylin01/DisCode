# Runner Agent Configuration
# Copy this file to .env and fill in your values

# REQUIRED: Authentication Token
# Get this by running /generate-token in Discord
DISCODE_TOKEN=your_token_from_discord_bot_here

# OPTIONAL: Discord Bot WebSocket URL
# Default: ws://localhost:8080
DISCODE_BOT_URL=ws://localhost:8080

# OPTIONAL: Runner Name
# Default: local-runner
DISCODE_RUNNER_NAME=my-macbook-pro

# OPTIONAL: Supported CLI Types (comma-separated)
# Values: claude, gemini, or both (e.g., "claude,gemini")
# Default: claude
DISCODE_CLI_TYPES=claude

# OPTIONAL: Default Working Directory
# Default: Current directory where runner agent starts
# Example: /Users/yourname/projects or C:\Projects
# This will be used when "Use Default Folder" is selected in /create-session
DISCODE_DEFAULT_WORKSPACE=/Users/yourname/projects

# OPTIONAL: HTTP Server Port for CLI Plugin (Main Agent)
# Default: 3122
DISCODE_HTTP_PORT=3122

# OPTIONAL: Hook Server Port (for internal CLI events)
# Default: 3000
DISCODE_HOOK_PORT=3000

# ============================================================================
# CLI Plugin Configuration
# ============================================================================

# OPTIONAL: Default CLI Plugin
# Values: tmux, print
# - tmux: Uses tmux for persistent sessions (requires tmux installed)
#         Best for: interactive approvals, real output streaming
# - print: Uses -p mode with session persistence (no tmux needed)
#         Best for: simple setups, fallback when tmux unavailable
# Default: tmux
DISCODE_CLI_PLUGIN=tmux

# OPTIONAL: Skip permission prompts (dangerous mode)
# When true, Claude auto-approves tool usage via --dangerously-skip-permissions
# Default: true
DISCODE_SKIP_PERMISSIONS=true

# OPTIONAL: Continue previous conversation
# When true, uses -c flag to resume last conversation
# Default: true
DISCODE_CONTINUE_CONVERSATION=true

# OPTIONAL: Enable debug logging
# DEBUG=true

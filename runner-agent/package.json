{
  "name": "discode-runner-agent",
  "version": "0.1.0",
  "description": "Runner Agent for DisCode - connects to Discord bot and manages CLI sessions",
  "type": "module",
  "scripts": {
    "start": "bun run src/index.ts",
    "start:node18": "./start-node18.sh",
    "dev": "bun run --watch src/index.ts",
    "setup-hooks": "node scripts/install-hooks.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@raylin01/claude-client": "0.1.0",
    "@raylin01/codex-client": "0.1.0",
    "@raylin01/gemini-client": "0.1.0",
    "bun-pty": "^0.4.8",
    "dotenv": "^16.4.7",
    "js-yaml": "^4.1.0",
    "node-pty": "^1.1.0",
    "strip-ansi": "^7.1.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.2",
    "@types/ws": "^8.5.13",
    "@vitest/coverage-v8": "^1.6.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^1.6.0"
  }
}

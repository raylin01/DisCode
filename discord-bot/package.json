{
  "name": "discode-discord-bot",
  "version": "0.1.0",
  "description": "Discord bot for DisCode - control AI coding CLIs through Discord",
  "type": "module",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run --watch src/index.ts",
    "register-commands": "bun run src/register-commands.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@raylin01/claude-client": "0.1.0",
    "discord.js": "^14.16.3",
    "js-yaml": "^4.1.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.9",
    "@types/ws": "^8.5.13",
    "@vitest/coverage-v8": "^1.6.0",
    "typescript": "^5.9.3",
    "vitest": "^1.6.0"
  }
}
